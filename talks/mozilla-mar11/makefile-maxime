# makefile for talk at Mozilla

TARGET=mozilla-talk
SOURCES=$(shell ls slides/*.tex) $(shell ls images/*) $(TARGET).tex
PDFVIEWER=acroread

.SUFFIXES:
.SUFFIXES: .tex .pdf .gv .acro .xpdf

all: $(TARGET).pdf

$(TARGET).pdf: $(SOURCES) makefile-maxime
	pdflatex $(TARGET).tex

view: $(TARGET).pdf
	$(PDFVIEWER) $(TARGET).pdf

clean:
	rm -f *~ $(TARGET).log $(TARGET).aux $(TARGET).out $(TARGET).bbl $(TARGET).blg $(TARGET).nav $(TARGET).snm $(TARGET).toc $(TARGET).pdf
