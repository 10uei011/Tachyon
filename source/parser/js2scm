#! /bin/sh

OPT_DEBUG=""
OPT_WARN=""
OPT_AST=""
OPT_PP=""
OPT_INT=""
OPT_EXE=""
OPT_EXPANSION=""
OPT_SCM=""
LAST_FILE=""
FILES=""

DIR=`dirname $0`

JS2SCM="d8 $DIR/../utility/debug.js $DIR/../utility/system.js $DIR/../utility/hashmap.js $DIR/misc.js $DIR/scanner.js $DIR/parser.js $DIR/pp.js $DIR/ast-passes.js $DIR/scheme.js $DIR/js2scm.js --"

# After a "make boostrap" this can be used instead:
#
#JS2SCM="$DIR/js2scm.js.exe"

while [ "$1" != "" ]; do
  case "$1" in
      "-debug") OPT_DEBUG="-debug" ;;
       "-warn") OPT_WARN="-warn" ;;
        "-ast") OPT_AST="-ast" ;;
         "-pp") OPT_PP="-pp" ;;
        "-int") OPT_INT="-int" ;;
        "-exe") OPT_EXE="-exe" ;;
  "-expansion") OPT_EXPANSION="-expansion" ;;
        "-scm") OPT_SCM="-scm" ;;
          "--") shift
                break ;;
          *.js) LAST_FILE="$1"
                FILES="$FILES $LAST_FILE"
                ;;
             *) echo "Usage: $0 [-ast|-pp|-int|-exe|-scm] file1.js file2.js ..."
                exit 1
                ;;
  esac
  shift
done

if [ "$OPT_AST" != "" ]; then
  $JS2SCM $OPT_DEBUG $OPT_WARN -ast -noscm $FILES
else
  if [ "$OPT_PP" != "" ]; then
    $JS2SCM $OPT_DEBUG $OPT_WARN -pp -noscm $FILES
  else
    $JS2SCM $OPT_DEBUG $OPT_WARN $FILES < /dev/null > $LAST_FILE.scm
    if [ "$OPT_INT" != "" ]; then
      gsi -:dar $LAST_FILE.scm "$@"
    else
      if [ "$OPT_EXE" != "" ]; then
        gsc $OPT_EXPANSION -exe -o $LAST_FILE.exe $LAST_FILE.scm
      else
        if [ "$OPT_SCM" == "" ]; then
          cat $LAST_FILE.scm
          rm -f $LAST_FILE.scm
        fi
      fi
    fi
  fi
fi
